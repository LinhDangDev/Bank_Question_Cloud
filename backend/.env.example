# Database Configuration
DB_HOST=localhost
DB_PORT=1433
DB_USERNAME=username
DB_PASSWORD=password
DB_DATABASE=question_bank

# Application Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# File Storage Configuration
STORAGE_PROVIDER=local
# Options: local, aws-s3, azure-blob, google-cloud, do-spaces

# Local Storage (when STORAGE_PROVIDER=local)
UPLOAD_PATH=./uploads
PUBLIC_URL=http://localhost:3001

# Digital Ocean Spaces (when STORAGE_PROVIDER=do-spaces)
DO_SPACES_ENDPOINT=sgp1.digitaloceanspaces.com
DO_SPACES_BUCKET=your-question-bank-files
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key
DO_SPACES_PUBLIC_URL=https://your-question-bank-files.sgp1.digitaloceanspaces.com
DO_SPACES_CDN_URL=https://your-question-bank-files.sgp1.cdn.digitaloceanspaces.com

# AWS S3 Configuration (when STORAGE_PROVIDER=aws-s3)
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_PUBLIC_URL=https://your-bucket.s3.amazonaws.com

# Azure Blob Storage (when STORAGE_PROVIDER=azure-blob)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=question-files
AZURE_PUBLIC_URL=https://yourstorageaccount.blob.core.windows.net

# Google Cloud Storage (when STORAGE_PROVIDER=google-cloud)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=./path/to/service-account-key.json
GOOGLE_CLOUD_BUCKET=your-bucket-name
GOOGLE_CLOUD_PUBLIC_URL=https://storage.googleapis.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
